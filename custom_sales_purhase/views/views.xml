<odoo>
    <data>
        <record id="sale_order_form_view_inherit" model="ir.ui.view">
            <field name="name">sale.order.form.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/tree/field[@name='product_uom_qty']" position="after">
                    <field name="carton"/>
                    <field name="new_carton"/>
                </xpath>
            </field>
        </record>

          <record id="product_template_from_view_inherit_factor" model="ir.ui.view">
            <field name="name">product.template.form.inherit.factor</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='type']" position="after">
                    <field name="factor"/>
                </xpath>
            </field>
        </record>

        <record id="product_product_from_view_inherit_factor" model="ir.ui.view">
            <field name="name">product.product.form.inherit.factor</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='type']" position="after">
                    <field name="factor"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>